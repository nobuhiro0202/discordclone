{
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "next/core-web-vitals",
    "google",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:prettier/recommended"
  ],
  "plugins": ["import"],
  "rules": {
    "import/extensions": [
      "error",
      "always",
      {
        "js": "always",
        "vue": "always"
      }
    ]
  }
}
